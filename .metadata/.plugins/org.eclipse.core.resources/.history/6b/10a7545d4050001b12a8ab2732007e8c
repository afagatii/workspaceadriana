			while (mes>12) {
				mes=JOptionPane.showInputDialog("Digite o mês novamente");
			}
			ano=Integer.parseInt(JOptionPane.showInputDialog("Entre com o ano"));
			while (ano.length!=4) {
				ano=JOptionPane.showInputDialog("Digite o ano novamente:"); 
			}
			System.out.println("dia" +dia "Mes" +mes "ano" +ano);
			
				
